{
  "variables": {
    "aws_region": "us-east-1",
    "binary_bucket_name": "amazon-eks",
    "binary_bucket_region": "us-west-2",
    "binary_bucket_path": "1.10.3/2018-07-26/bin/linux/amd64",
    "docker_version": "18",
    "creator": "{{env `USER`}}",
    "instance_type": "t3.small",
    "aws_vpc_id": "{{env `AWS_VPC_ID`}}",
    "aws_subnet_id": "{{env `AWS_SUBNET_ID`}}",
    "docker_ebs_name": "/dev/sdf"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `source_ami_id`}}",
      "source_ami_filter": {
        "filters": {
          "architecture": "x86_64",
          "name": "amzn2-ami-minimal-hvm-*",
          "owner-alias": "amazon",
          "root-device-type": "ebs",
          "state": "available",
          "virtualization-type": "hvm"
        },
        "owners": [
          "137112412989"
        ],
        "most_recent": true
      },
      "instance_type": "{{user `instance_type`}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/xvda",
          "volume_type": "gp2",
          "volume_size": 150,
          "delete_on_termination": true
        },
        {
          "device_name": "{{user `docker_ebs_name`}}",
          "volume_type": "io1",
          "volume_size": 100,
          "iops": 1000,
          "delete_on_termination": true
        }
      ],
      "ssh_username": "ec2-user",
      "ssh_pty": true,
      "vpc_id": "{{user `aws_vpc_id`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "associate_public_ip_address": true,
      "run_tags": {
        "Creator": "{{user `creator`}}"
      },
      "tags": {
        "CreatedAt": "{{isotime}}",
        "Owner": "{{user `creator`}}",
        "Version": "{{user `binary_bucket_path`}}",
        "DockerVersion": "{{user `docker_version`}}"
      },
      "ami_name": "lumoslabs-eks-node-{{isotime | clean_ami_name}}",
      "ami_description": "EKS Kubernetes Worker AMI with AmazonLinux2 image"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir -p /tmp/worker/"
      ]
    },
    {
      "type": "file",
      "source": "./files/",
      "destination": "/tmp/worker/"
    },
    {
      "type": "shell",
      "script": "setup_docker_ebs.sh",
      "environment_vars": [
        "DOCKER_EBS_NAME={{user `docker_ebs_name`}}",
        "FSTYPE=xfs"
      ]
    },
    {
      "type": "shell",
      "script": "install-worker.sh",
      "environment_vars": [
        "AMI_NAME={{user `ami_name`}}",
        "BINARY_BUCKET_NAME={{user `binary_bucket_name`}}",
        "BINARY_BUCKET_PATH={{user `binary_bucket_path`}}",
        "BINARY_BUCKET_REGION={{user `binary_bucket_region`}}",
        "DOCKER_VERSION={{user `docker_version`}}"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}
