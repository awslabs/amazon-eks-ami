[Unit]
Description=EKS Nodeadm Config
Documentation=https://github.com/awslabs/amazon-eks-ami
# we need to reach IMDS, so wait for the network to be up
After=network-online.target
Wants=network-online.target
# run before cloud-final, which includes user-data scripts
Before=cloud-final.service

[Service]
Type=oneshot
ExecStart=/usr/bin/nodeadm init --skip run

[Install]
WantedBy=multi-user.target
