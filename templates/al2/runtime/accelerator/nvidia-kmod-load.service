[Unit]
Description=Load NVIDIA kernel modules
# the script needs to use IMDS, so wait for the network to be up to avoid any flakiness
After=network-online.target
Wants=network-online.target
Before=containerd.service nvidia-fabricmanager.service nvidia-persistenced.service

[Service]
Type=oneshot
RemainAfterExit=true
ExecStart=/etc/eks/nvidia-kmod-load.sh

[Install]
WantedBy=multi-user.target containerd.service
